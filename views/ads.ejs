<% include partials/head.ejs %>

<div class="container main-page">
    <h1 class="text-center"><%= title %></h1>
    <p class="text-center">You are now seeing the ads filtered!</p>
    <p class="text-center pb-5">If you want to know more about filter, go check <a href="/help">'filters'</a>page</p>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4">
        <% ads.forEach(ad => { %>
        <div class="col">
            <div class="card">
                <img src="<%= ad.image ? ad.image : 'https://placedog.net/560' %>" class="card-img-top" alt="<%= ad.name %>">
                <div class="card-body">
                    <p class="card-text text-center card-title"><%= ad.name %>.</p>
                    <p class="card-text d-flex justify-content-between card-price font-weight-bold"><%= ad.price %> â‚¬. <i><%= ad.sale === true ? 'For sale' : 'To buy' %>.</i></p>
                    <p>Tags: <%= ad.tags %>.</p>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

</body>

</html>